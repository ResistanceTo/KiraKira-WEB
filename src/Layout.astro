---

import Footer from "./Footer.astro";
import Navbar from "./Navbar.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props.frontmatter || Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link
      rel="icon"
      type="image/png"
      sizes="192x192"
      href="/android-chrome-192x192.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="512x512"
      href="/android-chrome-512x512.png"
    />

    <meta name="generator" content={Astro.generator} />

    <meta name="description" content="KiraKira 是一个 Apple TV 上的简洁播放器。" />
    <link rel="canonical" href={Astro.url} />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="KiraKira" />
    <meta property="og:title" content={`KiraKira · ${title}`} />
    <meta property="og:description" content="KiraKira 是一个 Apple TV 上的简洁播放器。" />
    <meta property="og:image" content="/KiraKiraLogo.png" />
    <meta property="og:url" content={Astro.url} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`KiraKira · ${title}`} />
    <meta name="twitter:description" content="KiraKira 是一个 Apple TV 上的简洁播放器。" />
    <meta name="twitter:image" content="/KiraKiraLogo.png" />

    <meta name="theme-color" content="#ffffff" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#111827" media="(prefers-color-scheme: dark)" />

    <script type="application/ld+json" is:inline>{JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      name: "KiraKira",
      operatingSystem: "tvOS",
      applicationCategory: "MultimediaApplication",
      description: "KiraKira 是一个 Apple TV 上的简洁播放器。",
      url: Astro.url.href,
      image: "/KiraKiraLogo.png",
      publisher: { "@type": "Organization", name: "ZhaoHe Studio" }
    })}</script>

    <script is:inline>
      try {
        const t = localStorage.getItem("theme");
        if (t === "dark") {
          document.documentElement.classList.add("dark");
        } else if (t === "light") {
          document.documentElement.classList.remove("dark");
        }
      } catch {}
    </script>

    <title>KiraKira · {title}</title>
  </head>

  <body class="bg-white font-sans dark:bg-slate-900">
    <Navbar />
    <main class="m-auto max-w-7xl px-2">
      <slot />
    </main>
    <Footer />
  </body>
</html>
